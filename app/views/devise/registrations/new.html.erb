<div class="text-left signup-page">
  <div class="signup-area block-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="text-center">
        <%= image_tag 'KBC_logo.png',
                      :size => "220x90" %>
      </div>
      <hr>
      <div class="form-field row">
        <p class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-6 form-label">
          <%= f.label :email %>
        </p>
        <%= f.email_field :email,
                          autofocus: true,
                          :class => "form-control form-layout-small col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-4"
                          %>
      </div>

      <div class="form-field row">
        <p class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-6 form-label">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 字以上)
          <% end %>
        </p>
        <%= f.password_field :password,
                              autocomplete: "off",
                              :class => "col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-4 form-control form-layout-small" %>
      </div>

      <div class="form-field row">
        <p class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-6 form-label">
          <%= f.label :password_confirmation %>
        </p>
        <%= f.password_field :password_confirmation,
                              autocomplete: "off",
                              :class => "col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-4 form-control form-layout-small" %>
      </div>

      <hr>

      <div class="form-actions">
        <%= f.submit "登録する",
                     :class => "btn btn-primary max-width btn-lg" %>
        <h5><%= render "devise/shared/links" %></h5>
      </div>
    <% end %>
  </div>
</div>
