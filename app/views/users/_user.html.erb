<div class="row">
  <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-3">
    <a href="/users/<%= user.id %>">
      <%= image_tag(user.authenticated_image_url(:thumb), :class => "img-center hover_img") %>
    </a>
  </div>
  <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-xs-9">
    <p>
    <strong>
      <%= link_to "#{user.name}さん(#{user.age}才)",
                  user_path(user.id),
                  :class => "" %>
      <hr>
      <%= user.belong %>所属
    </strong>
    </p>
  </div>
</div>
<hr>