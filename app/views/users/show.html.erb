<div class="container text-left">
  <div class="user-show-page">
    <div class="row">
      <div class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-xs-12">
        <% if @user.image.present? %>
          <%= image_tag(@user.authenticated_image_url(:medium)) %>
        <% else %>
          <%= image_tag 'Guest/unknown_user.png', :size => "200x200" %>
        <% end %>
        <hr>
        <p class="form-label">
          <strong><%= @user.name %>さん</strong>
          <br>
          <%= @user.belong %>所属：<%= @user.age %>才
        </p>
        <% if user_signed_in? && current_user.id == @user.id %>
          <%= link_to "編集する", edit_user_path(current_user.id), :class => "btn btn-primary" %>
        <% end %>
        <hr>
      </div>
      <div class="col-xl-8 col-lg-8 col-md-8 col-sm-7 col-xs-12">
        <table class="table table-striped table-bordered">
          <tr>
            <td><strong>自己紹介</strong></td>
          </tr>
          <tr>
            <td>
              <%= @user.self_intro %>
            </td>
          </tr>
        </table>
        <table class="table table-striped table-bordered">
          <tr>
            <td>最近の動向</td>
          </tr>
          <tr>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>