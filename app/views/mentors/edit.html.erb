<div class="container">
  <div class="edit-page">
    <div class="row">
      <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-3">
        <div class="form-area">
          <table class="table table-striped table-bordered">
            <tr>
              <td>
                <p>ここに参加しているグループをいれる</p>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-xs-9">
        <div class="form-area">
          <%= form_for @mentor do |f| %>
            <table class="table table-striped table-bordered">
            <tr>
              <td><h4><strong>登録情報</strong></h4></td>
            </tr>
            <tr>
              <td class="form-field">
                <div class="text-center">
                  <%= f.label "プロフィール画像", :class => "form-actions" %>
                  <br>
                  <% if @mentor.m_image.present? %>
                    <%= image_tag(@mentor.authenticated_mimage_url(:thumb)) if @mentor.m_image.present? %>
                  <% else %>
                    <%= image_tag 'Guest/unknown_user.png', :size => "100x100" %>
                  <% end %>
                  <%= f.file_field :m_image, :class => "btn btn-primary block-center", :style => "max-width:200px;margin-top:5px;" %>
                </div>
                <div class="row">
                  <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= f.label "苗字", :class => "form-actions" %>
                    <%= f.text_field :family_name, :class => "form-control" %>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= f.label "名前", :class => "form-actions" %>
                    <%= f.text_field :first_name, :class => "form-control" %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= f.label "年齢", :class => "form-actions" %>
                    <%= f.number_field :age, :class => "form-control", :placeholder => "半角数字で入力" %>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= f.label "所属", :class => "form-actions" %>
                    <%= f.text_field :belong, :class => "form-control" %>
                  </div>
                </div>
                <%= f.label "自己紹介", :class => "form-actions" %>
                <%= f.text_area :self_intro, cols:"20", rows:"3", autofocus:"true", :class => "form-control" %>
                <div class="form-actions">
                  <%= f.submit "登録する", :class => "btn btn-primary" %>
                </div>
              </td>
            </tr>
            </table>
          <% end %>
        </div>
        <%= link_to "マイページ", mentor_path(current_mentor.id), :class => "btn btn-primary" %>
        <%= link_to "トップページ", root_path, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>